@page "{id:int?}"
@model CustomerAndAgentManagementSystem.UI.Pages.AgentList.EditModel
@{
    ViewData["Title"] = "Edit Agent";
}
<h2 class="display-4 mt-2">
    Edit Agent<i class="oi oi-pencil" style="font-size:40px"></i>
</h2>
<hr />

<form method="post">
    <input hidden="hidden" asp-for="Agent.AgentId" />
    <div class="row form-group">
        <label asp-for="Agent.AgentFirstName" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="Agent.AgentFirstName" class="form-control" placeholder="Agent First name..." />
            <span asp-validation-for="Agent.AgentFirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Agent.AgentLastName" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="Agent.AgentLastName" class="form-control" placeholder="Agent Last name..." />
            <span asp-validation-for="Agent.AgentLastName" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Agent.AgentEmail" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="Agent.AgentEmail" class="form-control" placeholder="Agent First name..." />
            <span asp-validation-for="Agent.AgentEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-10">
            <button class="btn btn-outline-primary" type="submit">Update</button>
            <a asp-page="/AgentList/Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />

    }


</form>