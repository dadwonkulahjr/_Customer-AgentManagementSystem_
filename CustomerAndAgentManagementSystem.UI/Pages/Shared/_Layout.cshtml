<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Customer & Agent Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/open-iconic/font/css/open-iconic-bootstrap.min.css" rel="stylesheet" />
</head>
<body>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/Iam_tuseTheProgrammer.jpg" style="width:75px" class="rounded-circle" />iamtuseTheProgrammer
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse flex-sm-row-reverse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                                Home<i class="oi oi-home"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" asp-page="#">What to know</a>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="" asp-page="/AboutDev">
                                    Know Your Developer<i class="oi oi-info"></i>
                                </a>
                                <a class="nav-link text-dark" asp-area="" asp-page="/AboutTheProject">
                                    About The Project<i class="oi oi-info"></i>
                                </a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" data-toggle="dropdown" asp-page="#">Application Play Around</a>
                            <div class="dropdown-menu">
                                <a class="nav-link text-dark" asp-area="" asp-page="/CustomerList/Index">
                                    CustomerList<i class="oi oi-list"></i>
                                </a>
                                <a class="nav-link text-dark" asp-area="" asp-page="/AgentList/Index">
                                    AgentList<i class="oi oi-list"></i>
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
     
    @*</header>*@
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Customer & Agent Management System - <a asp-area="" asp-page="/Index"
                                                                  style="text-decoration:none">Home</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
