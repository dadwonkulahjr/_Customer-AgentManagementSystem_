@page "{id:int?}"
@model CustomerAndAgentManagementSystem.UI.Pages.CustomerList.EditModel
@{
    ViewData["Title"] = "Edit Customer";
}
<h2 class="display-4 mt-2">
    Edit Customer<i class="oi oi-pencil" style="font-size:40px"></i>
</h2>
<hr />
<form method="post">
    <input hidden="hidden" asp-for="Customer.CustomerId" />
    <div class="row form-group">
        <label asp-for="Customer.CustomerFirstName" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="Customer.CustomerFirstName" class="form-control" placeholder="First name..." />
            <span asp-validation-for="Customer.CustomerFirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="Customer.CustomerLastName" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="Customer.CustomerLastName" class="form-control" placeholder="Last name..." />
            <span asp-validation-for="Customer.CustomerLastName" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="Customer.CustomerEmail" class="col-form-label col-md-2"></label>
        <div class="col-sm-10">
            <input asp-for="Customer.CustomerEmail" class="form-control" placeholder="Email..." />
            <span asp-validation-for="Customer.CustomerEmail" class="text-danger"></span>
        </div>
    </div>
    <div class="row form-group">
        <label asp-for="Customer.AgentId" class="control-label col-md-2"></label>
        <div class="col-sm-10">
            <select asp-for="Customer.AgentId" class="custom-select" asp-items="ViewBag.AgentId">
                <option value="">Select agent</option>
            </select>
            <span class="text-danger" asp-validation-for="Customer.AgentId"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-sm-10">
            <button class="btn btn-outline-primary" type="submit">Update</button>
            <a asp-page="/CustomerList/Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />

    }
</form>